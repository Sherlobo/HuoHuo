<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/order_waiting_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        app:elevation="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需付尾款费用"
                    android:layout_weight="1"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="563"
                    android:layout_marginRight="20dp"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尾款费用支付方式"
                    android:layout_weight="1"
                    android:textSize="18dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp">

                   <LinearLayout
                       android:id="@+id/linearlayuot1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center_vertical"

                       >
                       <LinearLayout
                           android:layout_width="155dp"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="30dp"
                           >
                           <CheckBox
                               android:id="@+id/checkBox"
                               android:text="余额支付"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="@color/Gray"
                               style="@style/MyCheckBox"
                               android:textSize="18dp"
                               />
                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center"

                           >
                           <CheckBox
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:id="@+id/checkBox3"
                               style="@style/MyCheckBox"
                               />
                           <ImageView
                               android:layout_width="100dp"
                               android:layout_height="50dp"
                               android:src="@drawable/weixin_bg_264"
                               android:id="@+id/imageView4" />

                       </LinearLayout>
                   </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearlayuot2"
                        android:layout_below="@id/linearlayuot1">
                        <LinearLayout
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="30dp"
                            >
                            <CheckBox
                                android:id="@+id/checkBox2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Gray"
                                style="@style/MyCheckBox"
                                />
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:src="@drawable/yinliang_bg"
                                android:id="@+id/imageView3"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            >
                            <CheckBox
                                android:id="@+id/checkBox4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/MyCheckBox" />
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:src="@drawable/zhifubao_bg_264"
                                android:id="@+id/imageView"
                                />

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearlayuot3"
                        android:layout_below="@id/linearlayuot2"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp">

                        <CheckBox
                            android:text="货到付款"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/checkBox5"
                            android:textColor="@color/Gray"
                            style="@style/MyCheckBox"
                            android:textSize="18dp"/>
                    </LinearLayout>



                </RelativeLayout>

            </LinearLayout>




            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确认收货，付清尾款"
                android:textColor="@color/White"
                android:background="@color/Red"
                android:layout_marginTop="70dp"
                android:textSize="18dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</layout>