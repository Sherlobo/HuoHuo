<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/Logo"
        android:text="LOGO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
         />
    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center" >

        <FrameLayout
            android:id="@+id/username_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:gravity="center" >
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:paddingRight="44dp"
                android:paddingLeft="84dp"
                android:maxLength="20"
                android:hint="请输入你的手机号"
                android:maxLines="1"
                android:inputType="text"
                android:background="@null"
                 >
            </EditText>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/login_usr_in" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/usercode_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_layout"
            android:layout_marginTop="10dp"
            android:gravity="center" >
            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="44dp"
                android:paddingLeft="84dp"
                android:maxLength="1"
                android:inputType="text"
                android:hint="请输入密码"
                android:background="@null"
                 >
            </EditText>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/login_code_in" />
            <Button
                android:id="@+id/GetIdentify"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/password"
                android:text="获取验证码"
                android:background="#3f51b5"
                android:textColor="@android:color/white"
                android:layout_gravity="right"
                android:visibility="invisible"/>

    </FrameLayout>
        <Button
            android:id="@+id/Identifying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usercode_layout"
            android:layout_alignRight="@id/usercode_layout"
            android:background="#00000000"
            android:textColor="#3f51b5"
            android:text="使用验证码登录"
            android:textSize="13sp"/>
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Identifying"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#2baf2b"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="登录" />
        <Button
            android:id="@+id/login_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/login"
            android:background="#00000000"
            android:text="登录遇到问题?"
            android:textSize="13sp" />
        <Button
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="#00000000"
            android:text="更多"
            android:textColor="#3f51b5"
            android:textSize="16sp"/>

    </RelativeLayout>

</RelativeLayout>

