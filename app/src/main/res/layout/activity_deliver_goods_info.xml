<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:text="货物数量"
                            android:textSize="18sp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            android:textAlignment="center"
                            android:spinnerMode="dialog"
                            android:entries="@array/weight">
                        </Spinner>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:text="货物类型"
                            android:textSize="18sp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <CheckedTextView
                            android:id="@+id/type_1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="普货"
                            android:textSize="18sp"
                            android:background="@color/LightGray"
                            android:textAlignment="center"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                        <CheckedTextView
                            android:id="@+id/type_2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="重货"
                            android:textSize="18sp"
                            android:background="@color/LightGray"
                            android:textAlignment="center"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                        <CheckedTextView
                            android:id="@+id/type_3"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="泡货"
                            android:textSize="18sp"
                            android:background="@color/LightGray"
                            android:textAlignment="center"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                        <CheckedTextView
                            android:id="@+id/type_4"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="设备"
                            android:textSize="18sp"
                            android:background="@color/LightGray"
                            android:textAlignment="center"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <CheckedTextView
                            android:id="@+id/type_5"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="建材"
                            android:textSize="18sp"
                            android:background="@color/LightGray"
                            android:textAlignment="center"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                        <CheckedTextView
                            android:id="@+id/type_6"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="食品"
                            android:textSize="18sp"
                            android:background="@color/LightGray"
                            android:textAlignment="center"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                        <CheckedTextView
                            android:id="@+id/type_7"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="饮料"
                            android:textSize="18sp"
                            android:background="@color/LightGray"
                            android:textAlignment="center"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                        <CheckedTextView
                            android:id="@+id/type_8"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="化工"
                            android:textSize="18sp"
                            android:background="@color/LightGray"
                            android:textAlignment="center"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <CheckedTextView
                            android:id="@+id/type_9"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="鲜品"
                            android:textSize="18sp"
                            android:background="@color/LightGray"
                            android:textAlignment="center"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                        <CheckedTextView
                            android:id="@+id/type_10"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="易碎"
                            android:textSize="18sp"
                            android:background="@color/LightGray"
                            android:textAlignment="center"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                        <CheckedTextView
                            android:id="@+id/type_11"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="    "
                            android:textSize="18sp"
                            android:background="@color/LightGray"
                            android:textAlignment="center"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                        <CheckedTextView
                            android:id="@+id/type_12"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="    "
                            android:textSize="18sp"
                            android:background="@color/LightGray"
                            android:textAlignment="center"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="确定"
                        android:layout_margin="20dp"
                        android:background="@color/Red"
                        android:textColor="@color/White"
                        android:textSize="20sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</layout>